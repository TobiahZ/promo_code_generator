@model IEnumerable<promoCodeApp.Models.game>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.registration.registrationName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.gameName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isActive)
        </th> 
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.registration.registrationName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.gameName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isActive)
        </td> 
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.gameId })
            |
            @Html.ActionLink("Delete", "Delete", new { id = item.gameId })
        </td>
    </tr>
} 

</table>
